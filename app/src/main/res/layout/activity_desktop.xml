<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/azul">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_head"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido ðŸ¾"
            android:paddingTop="-80dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="casual"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoy alguien espera por ti"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg2"/>
    </LinearLayout>

    <!-- WHITE PANEL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main"
        android:layout_marginTop="250dp"
        android:background="@drawable/bordes_desktop"
        android:orientation="vertical"
        android:paddingTop="40dp"
        tools:ignore="NotSibling">

        <!-- MENU CARDS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/adopciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/adopciones"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adopciones"
                        android:textStyle="bold"
                        android:textColor="@color/turqueza"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/asociaciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/asociaciones"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asociaciones"
                        android:textStyle="bold"
                        android:textColor="@color/turqueza"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/donaciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/donaciones"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eventos"
                        android:textStyle="bold"
                        android:textColor="@color/turqueza"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>


        </LinearLayout>

        <!-- HERO TEXT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adopciones que cambian vidas"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textColor="@color/turqueza"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:src="@drawable/dog2"/>
        </LinearLayout>

        <!-- CTA -->
        <Button
            android:id="@+id/btnExplore"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:text="Explorar adopciones"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/turqueza"
            android:textColor="@color/white"
            app:cornerRadius="26dp"/>

    </LinearLayout>

</RelativeLayout>
