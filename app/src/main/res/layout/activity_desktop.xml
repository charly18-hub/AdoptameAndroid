<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Desktop.DesktopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_head"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="45dp"
            android:layout_marginBottom="-5dp"
            android:fontFamily="casual"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"/>


        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="-10dp"
            android:background="@drawable/bg2"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bordes_desktop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                        <ImageButton
                            android:id="@+id/adopciones"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/adopciones"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Adopciones"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/turqueza"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="30dp">


                    <ImageButton
                        android:id="@+id/asociaciones"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/asociaciones"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Asociaciones Colaborando"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/turqueza"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="30dp">


                    <ImageButton
                        android:id="@+id/donaciones"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/donaciones"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Eventos"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/turqueza"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/promocion1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Adopciones que cambian vidas"
                    android:textSize="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:textColor="@color/turqueza"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="190dp"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/dog2"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>