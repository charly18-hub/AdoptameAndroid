<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_success_dialog"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Avatar del perrito -->
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#E8F4F3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pit"/>
    </androidx.cardview.widget.CardView>

    <!-- Título -->
    <TextView
        android:id="@+id/txtDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Gracias por adoptar!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2D3D"
        android:gravity="center"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/txtDialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu solicitud fue enviada con éxito.\nPronto te contactarán."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="8dp"/>

    <!-- Botón principal -->
    <Button
        android:id="@+id/btnTrack"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Ver estado"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gradient"/>

    <!-- Cerrar -->
    <TextView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:layout_marginTop="12dp"/>

</LinearLayout>
