<?xml version="1.0" encoding="utf-8"?>

<!-- comentarios de desarrollo -->
<!-- adjustViewBounds respeta proporciones -->
<!-- scaleType="centerCrop" cubre el ancho sin deformar) -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/idImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/idActions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="end|center_vertical"
                android:background="@drawable/bg_gray_gradient"
                android:layout_gravity="end|top"
                android:layout_margin="8dp">

            <LinearLayout
                android:id="@+id/idActions1"
                android:layout_width="34dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_gray_gradient"
                >

                    <ImageView
                        android:id="@+id/idHeart"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/turqueza"
                        android:src="@drawable/ic_favorite" />

                    <ImageView
                        android:id="@+id/idEye"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/turqueza"
                        android:src="@drawable/ic_visibility" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/idActions2"
                    android:layout_width="34dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:background="@drawable/bg_gray_gradient"
                    >

                    <TextView
                        android:id="@+id/idCountView"
                        android:layout_width="11dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/turqueza"
                        android:text="10"
                        android:textSize="12dp"
                        android:textColor="@color/azul_bg"
                        android:fontFamily="casual"/>

                    <TextView
                        android:id="@+id/idCountSolicitudes"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/turqueza"
                        android:text="100"
                        android:textSize="12dp"
                        android:textColor="@color/azul_bg"
                        android:fontFamily="casual"/>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:fontFamily="casual"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/turqueza"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp"
                    android:textSize="10dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/idRaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"                    android:textSize="10dp"
                    android:padding="0dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btnEnviarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Solicitar AdopciÃ³n"
            android:textColor="@color/turqueza"
            android:textStyle="bold"
            android:textSize="15dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"/>

        </LinearLayout>

</androidx.cardview.widget.CardView>