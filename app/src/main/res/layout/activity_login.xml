<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Fondo con imagen -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <!-- Overlay azul -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#802F7D8C" />

    <!-- Card del login -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Logo o imagen -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/log" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#2F7D8C"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encuentra a tu nuevo mejor amigo"
                android:textAlignment="center"
                android:textColor="#888888"
                android:layout_marginBottom="16dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Correo electrónico"
                android:drawableTint="@color/azul_bg"
                android:drawableStart="@drawable/ic_person"
                android:padding="12dp"
                android:background="@drawable/bg_border_green"
                android:layout_marginBottom="12dp"/>

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contraseña"
                android:drawableTint="@color/azul_bg"
                android:drawableStart="@drawable/outline_lock_24"
                android:drawableEnd="@drawable/ic_visibility"
                android:padding="12dp"
                android:background="@drawable/bg_border_green"
                android:inputType="textPassword"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="#2F7D8C"
                android:textAlignment="textEnd"
                android:textSize="13sp"/>

            <!-- Botón -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ENTRAR"
                android:textColor="@color/azul_bg"
                android:background="@drawable/bg_border_green"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? Regístrate"
                android:textAlignment="center"
                android:textColor="#2F7D8C"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
