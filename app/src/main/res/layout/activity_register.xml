<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro.RegisterActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azulLogin"
            android:padding="24dp">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/log"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/txtRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="530dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/imgBanner"
                tools:layout_editor_absoluteX="27dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@+id/inputName"
                tools:layout_editor_absoluteX="24dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:hint="Direccion"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/inputName"
                tools:layout_editor_absoluteX="24dp" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAlcaldia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:hint="Alcaldia"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/inputDireccion"
                tools:layout_editor_absoluteX="24dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:inputType="phone"
                app:layout_constraintTop_toBottomOf="@+id/inputAlcaldia"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="392dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@+id/inputTelefono"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="392dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/inputEdad"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="392dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>