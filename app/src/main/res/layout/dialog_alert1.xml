<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <!-- Fondo azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFF4FB"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- Perrito superior -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:src="@drawable/dog2"
            android:layout_marginBottom="8dp"/>

        <!-- Tarjeta blanca -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/db_dialog_card"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formato de adopción"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2D3D"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para poder continuar, necesitamos que completes el formato de adopción. Esto nos permite cuidar mejor a cada perrito y agilizar el proceso."
                android:textSize="14sp"
                android:textColor="#7A8B9C"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Perrito inferior -->
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="start"
            android:src="@drawable/dog1"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</FrameLayout>
