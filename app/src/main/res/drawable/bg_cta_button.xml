<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/azul_start"
                android:endColor="@color/turqueza"
                android:angle="90" />
            <corners android:radius="24dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/turqueza"
                android:endColor="@color/azul_bg"
                android:angle="90" />
            <corners android:radius="24dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
            <size android:height="48dp" />
        </shape>
    </item>
</selector> 